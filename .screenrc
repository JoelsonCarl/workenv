# Don't display copyright page
startup_message off

# bigger scrollback (default is 100)
defscrollback 10000

hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

chdir ${HOME}/work/bsp
screen -t bsp
chdir ${HOME}/work/buildroot
screen -t buildroot
chdir ${HOME}/work/linux
screen -t linux
chdir ${HOME}/work/u-boot
screen -t uboot
chdir ${HOME}/work/builds
screen -t builds
